<% layout( 'layouts/boilerplate' ) %>
<div class="container-fluid ">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <table class="table table-dark table-striped-columns table-hover">
                <thead>
                    <th>Customer</th>
                    <th>Email</th>
                </thead>
                <tbody>
                    <% for(let customer of customers) { %>
                    <tr>
                        <td><a href="customers/show/<%= customer._id %>"><%= customer.firstName %> <%= customer.lastName %></a></td>
                        <td><%= customer.email %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col text-end">
            <form class="form mb-3" action="/customers/new" method="GET" >
                <button type="submit" class="btn btn-info mb-3">Add New Customer</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
    
</div>