<% layout( 'layouts/boilerplate' ) %>
<div class="container-fluid ">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <table class="table table-dark table-striped-columns table-hover">
                <thead>
                    <th>Company Name</th>
                </thead>
                <tbody>
                    <% for(let company of companies ) { %>
                    <tr>
                        <td><a href="companies/show/<%= company._id %>"><%= company.companyName %></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col text-end">
            <form class="form mb-3" action="/companies/new" method="GET" >
                <button type="submit" class="btn btn-info mb-3">Add A Company</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
    
</div>