<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-sm-2 border-end"></div>
    <div class="col m-3">
        <form action="/companies/new" method="POST" novalidate>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <label class="form-label" for="cName">Company Name: </label>
                </div>
                <div class="col test-start">
                    <input type="text" class="form-control" name="comp[companyName]" id="cName" required >
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label class="form-label" for="cURL">Company Url: </label>
                </div>
                <div class="col test-start">
                    <input type="text" class="form-control" name="comp[companyUrl]" id="cURL" >
                </div>
            </div>
            <div class="row">
                <div class="col text-end mt-3">
                    <button class="btn btn-secondary" type="submit">Add Company</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-2 border-start"></div>
</div>