<% layout( 'layouts/boilerplate' ) %>
<div class="container-fluid ">
    <div class="row ">
        <div class="col"></div>
        <div class="col text-center">
            <div class="card" >
                <div class="card-body">
                  <h5 class="card-title"><%= comp.companyName %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><a href="<%= comp.companyUrl %>" ><%= comp.companyUrl %></a></h6>
                </div>
              </div>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col text-end">
            <form action="/companies/edit/<%= comp._id %>" method="GET" >
                <button class="btn btn-success" type="submit">Update Company</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
    <div class="row mt-5">
        <div class="col"></div>
        <div class="col">
            <table class="table table-dark table-striped-columns table-hover">
                <thead>
                    <th>Customers</th>
                </thead>
                <tbody>
                    <% for(let customer of custs ) { %>
                    <tr>
                        <td><a href="/customers/show/<%= customer._id %>"><%= customer.firstName %> <%= customer.lastName %></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
    
