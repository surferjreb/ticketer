<% layout( 'layouts/boilerplate' ) %>
<div class="container-fluid ">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= comp.companyName %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= comp.companyUrl %></h6>
                </div>
              </div>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <table class="table table-dark table-striped-columns table-hover">
                <thead>
                    <th>Name </th>
                </thead>
                <tbody>
                    <% for(let customer of comp.customers ) { %>
                    <tr>
                        <td><%= customer.firstName %> <%= customer.lastName %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form class="form mt-3" action="/companies/show/<%= comp._id %>/add/customers" method="POST">
                <div class="row">
                    <div class="col">
                        <select class="form-select" aria-label="Customer selector">
                            <option selected>Add Employee</option>
                            <% for(let cust of custs) { %>
                                <option name="customer[id]" value="<%= cust._id %>"><%= cust.firstName %> <%= cust.lastName %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col">
                        <button class="btn btn-info ">Add a Employee</button>
                    </div>
                </div>
                
            </form>
        </div>
        <div class="col"></div>
    </div>
