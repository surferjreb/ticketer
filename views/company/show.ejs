<% layout( 'layouts/boilerplate' ) %>
<div class="container-fluid ">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= comp.companyName %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= comp.companyUrl %></h6>
                </div>
              </div>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <table class="table table-dark table-striped-columns table-hover">
                <thead>
                    <th>Name </th>
                </thead>
                <tbody>
                    <% for(let customer of comp.customers ) { %>
                    <tr>
                        <td><%= customer.firstName %> <%= customer.lastName %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
