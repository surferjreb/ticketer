<% layout('layouts/boilerplate.ejs') %>
<div class="container-fluid text-center">
    <div class="row justify-content-center">
        <div class="col">
            <p class="display-4"><%= title %></p>
        </div>
    </div>
<hr class="border border-danger border-2 opacity-50">
<div class="row">
    <div class="col">
        <div class="table-responsive-sm">
            <table class="table table-bordered table-hover">
                <p class="display-6">New</p>
                <thead>
                    <tr>
                        <th scope="col">Number</th>
                        <th scope="col">Title</th>
                        <th scope="col">status</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let ticket of newTickets) { %>
                        <tr>
                            <td><a href="/tickets/<%= ticket._id %>"><%= ticket.ticketNumber %></a></td>
                            <td><%= ticket.title %></td>
                            <td><%= ticket.ticketStatus %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col">
        <div class="table-responsive-sm table-bordered">
            <table class="table table-hover">
                <p class="display-6">Open</p>
                <thead>
                    <tr>
                        <th scope="col">Number</th>
                        <th scope="col">Title</th>
                        <th scope="col">status</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let ticket of openTickets) { %>
                        <tr>
                            <td><a href="/tickets/<%= ticket._id %>"><%= ticket.ticketNumber %></a></td>
                            <td><%= ticket.title %></td>
                            <td><%= ticket.ticketStatus %></td>
                        </tr>
                    <% } %>    
                </tbody>
            </table>
        </div>
    </div>
</div>
    <div class="row justify-content-center mt-5">
        
        <div class="col">
            <div class="table-resposive-sm table-bordered">
                <table class="table table-hover">
                    <p class="display-6">On Hold</p>
                    <thead>
                        <tr>
                            <th scope="col">Number</th>
                            <th scope="col">Title</th>
                            <th scope="col">status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let ticket of onHoldTickets) { %>
                            <tr>
                                <td><a href="/tickets/<%= ticket._id %>"><%= ticket.ticketNumber %></a></td>
                                <td><%= ticket.title %></td>
                                <td><%= ticket.ticketStatus %></td>
                            </tr>
                        <% } %>    
                    </tbody>
                </table>
            </div>
            
        </div>
        <div class="col">
            <div class="table-responsive-sm">
                <table class="table table-hover table-bordered">
                
                    <p class="display-6">Closed</p>
                    <thead>
                        <tr>
                            <th scope="col">Number</th>
                            <th scope="col">Title</th>
                            <th scope="col">status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let ticket of closedTickets) { %>
                            <tr>
                                <td><a href="/tickets/<%= ticket._id %>"><%= ticket.ticketNumber %></a></td>
                                <td><%= ticket.title %></td>
                                <td><%= ticket.ticketStatus %></td>
                            </tr>
                        <% } %>    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>